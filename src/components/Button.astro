---
import type { HTMLAttributes } from 'astro/types';
interface Props extends HTMLAttributes<'button'>{
  variant?: 'outline' | 'filled';
}
const props = Astro.props;
props.variant = props.variant ?? 'filled';
---
<button
  class:list={[
    'inline-flex items-center gap-1 h-8 px-3 text-sm rounded-md cursor-pointer transition-all disabled:pointer-events-none disabled:opacity-50 hover:bg-accent hover:text-on-accent',
    props.variant === 'outline' && 'border bg-background text-on-background',
    props.variant === 'filled' && 'bg-primary text-on-primary',
    props.class
  ]}
  {...props}
>
  <slot/>
</button>
